# Server Configuration
PORT=3000
TZ=UTC

# MongoDB Configuration
MONGODB_ADDON_URI=mongodb://local:local@localhost:27017/app?authSource=app
MONGODB_ADDON_DB=app

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_ACCESS_TOKEN_EXP=30m
JWT_REFRESH_TOKEN_EXP=1y
JWT_SECRET_RESET=your-super-secret-reset-key
JWT_RESET_TOKEN_EXP=1h

# Web App Configuration
WEBAPP_RESET_URL=http://localhost:3001/reset-password

# Email Service Configuration (Brevo)
BREVO_API_KEY=your-brevo-api-key
BREVO_SENDER_NAME=MyApp
BREVO_SENDER_EMAIL=noreply@myapp.com
BREVO_TEMPLATE_PASSWORD_RESET=1
